<p id="notice"><%= notice %></p>

<h1>Listing Transactions</h1>

<table>
  <thead>
    <tr>
      <th>Load amount</th>
      <th>Transaction Time</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallets.each do |wallet| %>
      <tr>
        <td><%= print_price(wallet.load_amount) %></td>
        <td><%= time_ago_in_words(wallet.created_at) %> ago</td>
        <td><%= wallet.user_id %></td>

        <td><%= link_to 'Show', wallet %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_wallet_path %>
